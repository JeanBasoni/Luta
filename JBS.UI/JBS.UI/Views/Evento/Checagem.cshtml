
@{
    ViewBag.Title = "Checagem";
}

<div class="row bg-dark text-white">
    <div class="container">
        <div class="col-md-9">
            <h3>@ViewBag.Titulo</h3>
        </div>
    </div>
</div>

<div class="container" style="margin-top: 20px;">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="box-title">Tipo de Listagem</h4>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-2">
                    <label class="inputValue"><input type="checkbox" data-nome="Atleta" name="val" value="1" />&nbsp; Atleta</label>
                </div>
                <div class="col-md-2">
                    <label class="inputValue"><input type="checkbox" data-nome="Categoria" name="val" value="2" />&nbsp; Categoria</label>
                </div>
                <div class="col-md-2">
                    <label class="inputValue"><input type="checkbox" data-nome="Absoluto" name="val" value="3" />&nbsp; Absoluto</label>
                </div>
                <div class="col-md-2">
                    <label class="inputValue"><input type="checkbox" data-nome="Equipe" name="val" value="4" />&nbsp; Equipe</label>
                </div>
            </div>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="box-title">Filtro por <z class="localName"></z></h4>
        </div>
        <div class="box-body">
            <div class="row">

            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(".inputValue").click(function () {
            if ($(this).children().prop("checked"))
                $(".localName").text($(this).children().attr("data-nome"));
        });
    });
</script>


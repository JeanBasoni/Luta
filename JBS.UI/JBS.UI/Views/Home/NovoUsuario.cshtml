
@{
    ViewBag.Title = "Cadastro de usuário";
}

<div class="register-box" style="padding-top: 20px;">
    <div class="login-logo">
        <b>Nocaute</b>Combate
    </div>

    <div class="register-box-body">
        <p class="login-box-msg">Novo usuário</p>

        <form action="../../index.html" method="post">
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="Nome completo">
                <i class="fa fa-user form-control-feedback"></i>
            </div>
            <div class="form-group has-feedback">
                <input type="email" class="form-control" placeholder="Email">
                <i class="fa fa-envelope form-control-feedback"></i>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Senha">
                <i class="fa fa-key form-control-feedback"></i>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Repetir senha">
                <i class="fa fa-key form-control-feedback"></i>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox" style="margin:0;">
                        <label>
                            <input type="checkbox" /> Eu aceitos os <a href="#">termos</a>
                        </label>
                    </div>
                    @Html.ActionLink("Já tenho uma conta", "Login", null, new { @class = "text-center" })
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Salvar</button>
                </div>
                <!-- /.col -->
            </div>
        </form>



@{
    ViewBag.Title = "Cadastro de usuário";
}

<div class="register-box" style="padding-top: 20px;">
    <div class="login-logo">
        <a href="../../index2.html"><b>Nocaute</b>Combate</a>
    </div>

    <div class="register-box-body">
        <p class="login-box-msg">Novo usuário</p>

        <form action="../../index.html" method="post">
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="Nome completo">
                <i class="fa fa-user form-control-feedback"></i>
            </div>
            <div class="form-group has-feedback">
                <input type="email" class="form-control" placeholder="Email">
                <i class="fa fa-envelope form-control-feedback"></i>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Senha">
                <i class="fa fa-key form-control-feedback"></i>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Repetir senha">
                <i class="fa fa-key form-control-feedback"></i>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false" style="position: relative;"><input type="checkbox" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div> Li e aceito os <a href="#">termos</a>
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Salvar</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

